---
import { Icon } from 'astro-icon/components';
---

<div id="image-modal-overlay" class="fixed inset-0 bg-black/20 backdrop-blur-sm flex items-center justify-center z-50 hidden transition-opacity duration-300 ease-in-out opacity-0">
  <button id="image-modal-close" class="absolute top-5 right-5 h-10 w-10 rounded-full bg-white/20 text-white flex items-center justify-center text-lg font-bold hover:bg-white/30 transition-colors z-10" aria-label="Close image view">
    <Icon name="heroicons:x-mark" class="h-6 w-6" />
  </button>
  <div id="image-modal-container" class="flex items-center justify-center w-full h-full">
    <img id="image-modal-content" src="" alt="Enlarged view" class="w-[80vw] max-h-[90vh] object-contain rounded-lg" />
  </div>
</div>